<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pl.michalsnella.mathlearning.controller.challenges.DivisionChallengeController"
      spacing="10" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="titleLabel" style="-fx-font-size: 20px;"/>

    <HBox spacing="5" alignment="CENTER_RIGHT">
        <VBox spacing="2" alignment="CENTER_RIGHT">
            <HBox fx:id="topAnswerBox" spacing="5" alignment="CENTER_RIGHT"/>

            <VBox spacing="2" alignment="BOTTOM_RIGHT">
                <Separator fx:id="divisionLine" orientation="HORIZONTAL" prefWidth="200"/>
                <HBox fx:id="dividendBox" spacing="0" alignment="CENTER_LEFT"/>
            </VBox>
        </VBox>

        <VBox spacing="0" alignment="BOTTOM_LEFT">
            <HBox spacing="2" alignment="CENTER_LEFT">
                <Label text=":" style="-fx-font-size: 18px; -fx-padding: 0 5 0 5;"/>
                <HBox fx:id="divisorBox" spacing="0" alignment="CENTER_LEFT"/>
            </HBox>
        </VBox>
    </HBox>

    <!-- Kontener na etapy dzielenia, uzupeÅ‚niany dynamicznie -->
    <VBox fx:id="stepsContainer" spacing="10" alignment="TOP_LEFT"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="newOperationButton" onAction="#onNewClicked"/>
        <Button fx:id="backButton" onAction="#onBackClicked"/>
    </HBox>
</VBox>
